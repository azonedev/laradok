version: '3'
services:
    #Nginx Service
    ${PREFIX}_nginx:
      image: nginx:latest
      container_name: ${PREFIX}_nginx
      tty: true
      ports:
          - 8081:80
      volumes:
          - ./.docker/nginx/nginx.conf:/etc/nginx/nginx.conf
          - ./.docker/nginx/app/app.conf:/etc/nginx/conf.d/default.conf 
      depends_on:
          - ${PREFIX}_app
      links:
          - ${PREFIX}_app
      environment:
        - X_SERVER_TYPE=nginx

    #PHP Service
    ${PREFIX}_app:
      build:
        context: .
        dockerfile: ./.docker/app/Dockerfile
      container_name: ${PREFIX}_app
      volumes:
        - ./app:/var/www/app
      restart: always
      environment:
        - X_SERVER_TYPE=app

    #Worker Service
    ${PREFIX}_worker:
      build:
        context: .
        dockerfile: ./.docker/worker/Dockerfile
      container_name: ${PREFIX}_worker
      volumes:
        - ./app:/var/www/app
        - ./storage/logs/worker:/var/log
      environment:
        - X_SERVER_TYPE=worker

    #MySQL Service
    ${PREFIX}_db:
      image: mysql:latest
      container_name: ${PREFIX}_db
      restart: unless-stopped
      command: --default-authentication-plugin=mysql_native_password
      tty: true
      ports:
        - "3307:3306"
      environment:
        MYSQL_DATABASE: ${DB_NAME}
        MYSQL_ROOT_PASSWORD: ${DB_ROOT_PASSWORD}
        SERVICE_TAGS: dev
        SERVICE_NAME: mysql
      volumes:
        - ./.data/mysql:/var/lib/mysql

    #mailhog service for testing emails
    ${PREFIX}_mailhog:
      image: mailhog/mailhog
      container_name: ${PREFIX}_mailhog
      logging:
        driver: 'none'  # disable saving logs
      ports:
        - 1025:1025 # smtp server
        - 8025:8025 # web ui

    #REDIS
    # ${PREFIX}_redis:
    #   image: redis:latest
    #   container_name: redis
    #   ports:
    #     - "6379:6379"
    #   volumes:
    #     - ./.data/redis:/data # persistent storage
        
#Volumes
volumes:
  dbdata:
    driver: local
    
networks:
  default:
      name: default
      external: true